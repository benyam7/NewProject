<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryLight</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <!--    BUTTONS -->
    <style name="button" parent="Widget.AppCompat.Button">
        <item name="android:minWidth">120dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">19sp</item>
    </style>
<style name="orange_button">
    <item name="android:textColor">@color/black</item>
    <item name="android:background">@color/colorAccent</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:textSize">14sp</item>
    <item name="android:minWidth">115dp</item>
    <item name="android:minHeight">40dp</item>
</style>

    <style name="button.light" />
    <style name="button.dark">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="button.dark.blue">
        <item name="android:background">@color/blue</item>
    </style>
    <style name="button.dark.yellow">
        <item name="android:background">@color/yellow</item>
    </style>

    <style name="grey_label">
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="blue_label">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/blue</item>
        <item name="android:layout_width">216dp</item>
        <item name="android:layout_height">46dp</item>
        <item name="android:minWidth">200dp</item>
        <item name="android:textSize">20sp</item>
    </style>


    <style name="grey_label.large">
        <item name="android:textSize">30sp</item>
    </style>
    <style name="grey_label.small">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="grey_label.title">
        <item name="android:textSize">24sp</item>
    </style>
<style name="black_label">
    <item name="android:textColor">@color/black</item>
    <item name="android:textSize">16sp</item>

</style>
    <style name="black_bkg">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@color/blue</item>
    </style>

    <style name="black_label.small">
        <item name="android:textSize">14sp</item>
    </style>
    
    <style name="CustomTabStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="LoginTheme" parent="FirebaseUI">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>